<Window x:Class="Client.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Konwersacja" HorizontalAlignment="Left" Margin="72,49,0,0" VerticalAlignment="Top" Width="75" Click="openConvButton"/>
        <Button Content="Wyloguj" HorizontalAlignment="Left" Margin="707,49,0,0" VerticalAlignment="Top" Width="75" Click="logoutButton"/>
        <TextBlock x:Name="numberText" HorizontalAlignment="Left" Margin="707,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="74" Height="29">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.07"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform><InlineUIContainer>
                <TextBlock Name="accNumberBlock" Height="23" TextWrapping="Wrap" Width="120"/>
            </InlineUIContainer></TextBlock>
        <TextBlock Name="receiveBlockTest" HorizontalAlignment="Left" Margin="10,284,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="125" Width="445"/>
        <TextBox Name="searchInput" MaxLength="8" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Left" Height="23" Margin="474,160,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

        <Button Content="?" HorizontalAlignment="Left" Margin="594,160,0,0" VerticalAlignment="Top" Width="25" Height="23" Click="searchUsersButton"/>
        <TextBlock Name="searchResults" HorizontalAlignment="Left" Margin="474,188,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="67" Width="145"/>

    </Grid>
</Window>
