<Window x:Class="Client.Windows.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="SearchWindow" Height="500" Width="400"
        Closing="showMainWindow">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,25" Grid.Column="1" Grid.Row="0" Orientation="Vertical">
            <Label>Numer GG lub pseudonim </Label>
            <TextBox Height="30" Name="search1"></TextBox>
            
            <Label>Numer telefonu lub email</Label>
            <TextBox Height="30" Name="search2"></TextBox>

            <DockPanel Margin="0,10">
                <Button Margin="5,0,0,0" DockPanel.Dock="Right" Width="70" Click="declineButton">Anuluj</Button>

                <Button Margin="0,0,5,0" Background="Green" DockPanel.Dock="Right" Click="searchButtonClick">Szukaj</Button>
            </DockPanel>
            <Label HorizontalAlignment="Center">_____________________________________________</Label>

            <ScrollViewer VerticalScrollBarVisibility="Hidden"  HorizontalAlignment="Center" >
                <StackPanel Name="resultStackPanel" Margin="0,0,0,0" Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Name="resultCounter">Brak wyników</TextBlock>
                </StackPanel>
            </ScrollViewer>
            
        </StackPanel>
    </Grid>
</Window>
