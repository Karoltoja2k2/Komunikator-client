             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <DockPanel LastChildFill="False" HorizontalAlignment="Stretch" Background="AliceBlue" Height="30" Margin="2,2,2,0">
            <TextBlock Text="#" Margin="15,0" VerticalAlignment="Center"/>
            <TextBlock Name="number" Text="numer" Margin="15,0,15,0" VerticalAlignment="Center"/>
            <TextBlock Name="nick" Text="pseudonim" Margin="15,0,15,0" VerticalAlignment="Center"/>
            <Button Name="acceptReq" Background="DarkSeaGreen" Margin="15,5" Width="50" DockPanel.Dock="Right"></Button>
        </DockPanel>
    </Grid>
</UserControl>
